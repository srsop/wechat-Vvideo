<view class="container">
    <view class="main-list">
        <scroll-view id="main-scroll-id" scroll-y="true" class="main-scroll" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll">
            <swiper class="banner-view-content" id="banner" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
                <block wx:for="{{banners}}">
                    <swiper-item>
                        <image src="{{item}}" class="slide-image" bindtap="bannerTap"/>
                    </swiper-item>
                </block>
            </swiper>
            <block wx:for="{{latestVideos}}">     
                <view bindtap="viewTap" class="latest-item">
                    <image src="{{item.image}}" class="latest-item-image"/>
                    <view class="latest-item-title">
                      <text class="latest-item-title-text">{{ item.title }}</text>
                    </view>
                    <view class="latest-item-duration">
                      <text class="latest-item-duration-text">{{ item.cates[0].catename + ' / ' + item.duration }}</text>
                    </view>
                </view>
            </block>
        </scroll-view>
    </view>
</view>