/**index.wxss**/
.container {
    display: flex;
    height: 100%;
    justify-content: flex-start;
}
.main-list {
    flex: 1;
    display: flex;
}
.main_scroll {
    flex: 1;
}
.banner_view_content {
    display: flex;
    height: 422rpx;
    width: 750rpx;
}
.slide-image {
    height: 422rpx;
    width: 750rpx;
    display: flex;
    flex: 1;
}
.latest-item {
    display: flex;
    flex: 1;
    width: 100%;
    height: 200px;
}
.latest-item-image {
    width: 100%;
    height: 100%;
}
.latest-item-title {
    display: flex;
    color: white;
    align-items: center;
    position: absolute;
    width: 95%;
    height: 30px;
    margin-top: 135px;
    margin-left: 10px;
}
.latest-item-title-text {
    font-weight: bold;
}
.latest-item-duration {
    display: flex;
    color: white;
    align-items: center;
    position: absolute;
    width: 200px;
    height: 20px;
    margin-top: 170px;
    margin-left: 10px;
}
.latest-item-duration-text {
    font-size: 12px;
}

.loading_more_view {
    display: flex;
    flex: 1;
    height: 44px;
    justify-content: center;
    align-items: center;
}

.loagding_more_image {
    height: 10px;
    width: 500rpx;
}



