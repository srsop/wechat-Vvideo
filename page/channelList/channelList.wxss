/**index.wxss**/
.container {
    display: flex;
    height: 100%;
    justify-content: flex-start;
}
.main-list {
    flex: 1;
    display: flex;
}
.main-scroll {
    flex: 1;
}
.latest-item {
    display: flex;
    flex: 1;
    width: 100%;
    height: 200px;
}
.latest-item-image {
    width: 100%;
    height: 100%;
}
.latest-item-title {
    display: flex;
    color: white;
    align-items: center;
    position: absolute;
    width: 95%;
    height: 30px;
    margin-top: 135px;
    margin-left: 10px;
}
.latest-item-title-text {
    font-weight: bold;
}
.latest-item-duration {
    display: flex;
    color: white;
    align-items: center;
    position: absolute;
    width: 200px;
    height: 20px;
    margin-top: 170px;
    margin-left: 10px;
}
.latest-item-duration-text {
    font-size: 12px;
} 